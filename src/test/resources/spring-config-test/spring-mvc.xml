<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context" xmlns:mvc="http://www.springframework.org/schema/mvc"
	xsi:schemaLocation="
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd    
       	http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.1.xsd
       	http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc-3.1.xsd">

	<!-- 注解扫描 -->
	<context:component-scan base-package="com.shengchuang.web" />
	<context:component-scan base-package="config.springmvc" />
	
	<!-- 注册 DefaultAnnotationHandlerMapping AnnotationMethodHandlerAdapter -->
	<mvc:annotation-driven />
	<mvc:default-servlet-handler/>   
	<!-- 静态资源 -->
	<mvc:resources mapping="/media/**" location="file:c:/home/yanhong/" />
	<mvc:resources mapping="/resource/**" location="/resource/" />
	<mvc:resources mapping="/**.js" location="/views/" />


</beans>